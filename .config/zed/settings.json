  },
  "gutter": {
    "line_numbers": true,
  },
  "minimap": {
    "show": "never",
  },
  "cursor_shape": "bar",
  "autosave": "on_focus_change",
  "show_edit_predictions": true,
  "soft_wrap": "none",
  "telemetry": {
    "diagnostics": false,
    "metrics": false,
  },
  "base_keymap": "VSCode",
  "ui_font_size": 16,
  "buffer_font_size": 14.0,
  "theme": {
